{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Clean",
			"type": "shell",
			"command": "scons",
			"args": [
				"-c"
			]
		},
		{
			"label": "Regular Build",
			"command": "scons",
			"type": "shell",
			"group": "build",
			"problemMatcher": "$msCompile" // Important to catch the status
		},
		{
			"label": "Debug Build",
			"command": "scons",
			"args": [
				"debug=1"
			],
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$msCompile", // Important to catch the status
			"dependsOrder": "sequence",
			"dependsOn": [
				"Clean"
			]
		}
	]
}